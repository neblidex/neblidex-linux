gtk-color-scheme =
"gray_color:         #f5f5f5
fg_color:          #999999
base_color:        #fff
text_color:        #999999
bg_color:  #000
selected_gray_color: #999999
panel_bg_color: #090B0D
selected_fg_color: #b2b2b2
white_color: #fff
mild_gray_color: #5A5A5A
tooltip_bg_color:  #fff9e5
tooltip_fg_color:  #000"

gtk-button-images     = 0
gtk-menu-images       = 0
gtk-toolbar-style     = 0
gtk-enable-mnemonics  = 0
gtk-icon-sizes        = "gtk-small-toolbar=16,16:gtk-large-toolbar=22,22"
gtk-toolbar-icon-size = large-toolbar
gtk-auto-mnemonics    = 1


style "default" {
    xthickness = 1
    ythickness = 1

    ### colours
    bg[NORMAL]        = @bg_color
    bg[PRELIGHT]      = @bg_color
    bg[SELECTED]      = @panel_bg_color
    bg[INSENSITIVE]   = @bg_color
    bg[ACTIVE]        = @bg_color

    fg[NORMAL]        = @fg_color
    fg[PRELIGHT]      = @fg_color
    fg[SELECTED]      = @selected_fg_color
    fg[INSENSITIVE]   = darker (@fg_color)
    fg[ACTIVE]        = @fg_color

    text[NORMAL]      = @text_color
    text[PRELIGHT]    = @text_color
    text[SELECTED]    = @selected_fg_color
    text[INSENSITIVE] = darker (@fg_color)
    text[ACTIVE]      = @text_color

    base[NORMAL]      = @panel_bg_color
    base[PRELIGHT]    = @panel_bg_color
    base[SELECTED]    = @mild_gray_color
    base[INSENSITIVE] = @bg_color
    base[ACTIVE]      = shade (1.3, @panel_bg_color)

    ### style properties
    GtkWidget::new-tooltip-style = 1

    GtkEntry::honors-transparent-bg-hint = 1
    GtkEntry::inner-border = { 2, 2, 2, 2 }

    GtkButton::child-displacement-x = 0
    GtkButton::child-displacement-y = 0
    GtkButton::default-border = { 0, 0, 0, 0 }
    GtkButton::inner-border = { 2, 2, 4, 4 }

    GtkTreeView::odd-row-color = @panel_bg_color

    GtkScrolledWindow::scrollbar-spacing = 0
    GtkScale::slider-length = 14
    GtkRange::trough-side-details = 1

    GtkTreeView::expander-size = 8
    GtkExpander::expander-size = 8
    GtkComboBox::arrow-size = 12

    engine "murrine" {

        arrowstyle = 2
        rgba       = TRUE
        roundness  = 3
        glazestyle = 0

        menustyle        = 0
        menuitemstyle    = 0
        menubaritemstyle = 0
        comboboxstyle    = 1
        spinbuttonstyle  = 1
        colorize_scrollbar = FALSE
        progressbarstyle = 0
        trough_shades = { 0.842, 0.886 }
    }
}

style "wide" = "default" {
    xthickness = 2
    ythickness = 2
}

style "wider" = "default" {
    xthickness = 0
    ythickness = 0
}


style "button" {
    xthickness = 0
    ythickness = 0

	 bg[NORMAL]      = @panel_bg_color
	bg[INSENSITIVE] = @bg_color
	bg[PRELIGHT] = @panel_bg_color
	bg[ACTIVE] = @panel_bg_color
	fg[NORMAL] = @fg_color
	

    GtkWidget::focus-padding = 0

    engine "murrine" {
        contrast = 0.1
	roundness = 0
        gradient_shades     = {1.0, 1.0, 1.0, 1.0}
	border_colors = {@fg_color,@fg_color}
        focus_color         = shade(0.6, @panel_bg_color)
        textstyle           = 1
	reliefstyle = 0
      }
}

style "button_label"{
	fg[NORMAL] = @fg_color
	fg[PRELIGHT] = @selected_fg_color
	fg[ACTIVE] = @selected_fg_color
}

style "label"{
	fg[NORMAL] = @text_color
}

style "toggle-button" = "button" {
    bg[NORMAL] = @bg_color
    bg[PRELIGHT] = @panel_bg_color
}

style "menu" {
    xthickness = 0
    ythickness = 0

	fg[PRELIGHT] = @panel_bg_color
	fg[NORMAL] = @panel_bg_color
	bg[NORMAL] = @panel_bg_color

    engine "murrine" {
        roundness = 3
        gradient_shades     = {1.02, 0.97, 0.92, 0.87}
    }
}

style "menu-item" {
    xthickness = 0
    ythickness = 3

	fg[PRELIGHT] = @selected_fg_color
	fg[NORMAL] = @fg_color
	bg[NORMAL] = @panel_bg_color
	bg[PRELIGHT] = @panel_bg_color

    engine "murrine" {
        roundness = 0
        gradient_shades     = {1.02, 0.97, 0.92, 0.87}
    }
}

style "toolbar" = "default"
{
    bg[NORMAL] = "#ddd"
    engine "murrine" {
        toolbarstyle = 2
    }
}

style "toolbar-button"
{
    engine "murrine" {
        contrast = 1.0
        focus_color         = @bg_color
      }
}

style "tooltip"
{
    xthickness = 5
    ythickness = 5

    fg[NORMAL] = @tooltip_fg_color
    bg[NORMAL] = @tooltip_bg_color
}

style "treeview" = "default"
{
	GtkTreeView::odd-row-color = @panel_bg_color
	bg[NORMAL] = @panel_bg_color
	base[NORMAL] = @panel_bg_color

    engine "murrine" {
        roundness = 0
        gradient_shades     = {1.0, 1.0, 1.0, 1.0}
        listviewheaderstyle = 3
        separatorstyle = 1
    }
}

style "tree-header" = "wide"
{
    bg[NORMAL] = @panel_bg_color

    engine "murrine" {

    }
}

style "icon-view" = "default"
{
    bg[SELECTED] = "#f5f7fa"
    base[SELECTED] = "#f5f7fa"
    fg[SELECTED] = "#000"
    text[SELECTED] = "#000"
}

style "toolbar-combo-box" = "default"
{
    fg[NORMAL] = "#616161"
    text[NORMAL] = @fg_color
    bg[NORMAL] = "#fff"
    base[NORMAL] = "#fff"
    ythickness = 4
    xthickness = 2

    engine "murrine" {
	comboboxstyle = 0
        arrowstyle = 2
    }
}

style "combo-box" = "default"
{
	fg[NORMAL] = @fg_color
	text[NORMAL] = @fg_color
	bg[NORMAL] = @bg_color
	base[NORMAL] = @bg_color
	xthickness = 0
	ythickness = 0

    engine "murrine" {
        arrowstyle = 2
    }
}

